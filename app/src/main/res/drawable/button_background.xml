<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние нажатия -->
    <item android:state_pressed="true" android:drawable="@color/pokemonPrimary" />

    <!-- Состояние неактивности (например, если кнопка отключена) -->
    <item android:state_enabled="false" android:drawable="@color/pokemonAccent" />

    <!-- Обычное состояние (по умолчанию) -->
    <item android:drawable="@color/pokemonButtonColor" />
</selector>